<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout 
      android:id="@+id/currentRouteHolder"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView 
          android:id="@+id/CurrentRouteText"
          android:text="The Route Name"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:gravity="center"/>
  </LinearLayout>
  <LinearLayout
            android:id="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentRouteHolder">      

         <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:visibility="gone"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tracker"
            android:layout_below="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="KM"
            android:textColor="#ffffff"
            android:textSize="24dp" >

        </TextView>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="TIME"
            android:textColor="#ffffff"
            android:textSize="24dp" >

        </TextView>

        <TextView
            android:id="@+id/tvPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="PACE (KM)"
            android:textColor="#ffffff"
            android:textSize="24dp" >

        </TextView>
    </LinearLayout>
    
    <LinearLayout
	        android:id="@+id/tracker2"
            android:layout_below="@+id/tracker"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
        <TextView
            	android:id="@+id/tvCoin"
                android:text="Coins"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
   </LinearLayout>
   
   <LinearLayout
        android:id="@+id/enemyPartyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tracker2" />

    
   <LinearLayout 
        android:id="@+id/playerPartyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/audio"
        android:orientation="horizontal" />
    
    <LinearLayout
            android:id="@+id/audio"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Pause Clip"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Display Combat Log"
            	android:id="@+id/btnLog"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Stop Mission"
                android:id="@+id/stopMission"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</RelativeLayout>