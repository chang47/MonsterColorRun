   <LinearLayout
        android:id="@+id/enemyPartyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/routeRunOtherLayout"
        android:layout_above="@+id/playerPartyLayout" 
        android:background="@drawable/battle"
        android:gravity="center"/>

    
   <LinearLayout 
        android:id="@+id/playerPartyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/audio"
        android:orientation="horizontal" />
    
    <LinearLayout
            android:id="@+id/audio"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <Button
                android:text="Display Log"
            	android:id="@+id/btnLog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Finish"
                android:id="@+id/stopMission"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</RelativeLayout>