<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffff0000">
  <LinearLayout 
      android:id="@+id/currentRouteHolder"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      >
      <TextView 
          android:id="@+id/CurrentRouteText"
          android:text="The Route Name"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:gravity="center"
          style="@style/RouteLabel"
          android:textColor="#ffffff" />
  </LinearLayout>
  
  <!-- Just added to be included  -->
  <LinearLayout
            android:id="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentRouteHolder">      

         <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:visibility="gone"
            android:textColor="#FFFFFF" />
    </LinearLayout>

  	<LinearLayout 
  	    android:id="@+id/routeRunLayout"
  	    android:layout_below="@+id/progress"
  	    android:layout_height="wrap_content"
  	    android:layout_width="match_parent"
  	    android:orientation="horizontal"
  	    >
		<TextView
            android:id="@+id/routeRunPaceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Steps"
            android:gravity="center"
            android:textColor="#ffffff"
            style="@style/RouteRunStep"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
            android:background="@drawable/border"/>
  	</LinearLayout>
  
    <LinearLayout
            android:id="@+id/routeRunOtherLayout"
            android:layout_below="@+id/routeRunLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
            android:id="@+id/routeRunDistanceLayout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
	        <TextView
	            android:id="@+id/routeRunDistanceTxt"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="mi"
	            android:textColor="#ffffff"
	            style="@style/OtherText"
	            android:gravity="center"
	            android:background="@drawable/border"
	            android:layout_marginLeft="1dp" />
	        
	        <TextView 
	            android:id="@+id/routeRunDistanceLabel"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="mi"
	            android:gravity="center"
	            style="@style/OtherTextLabel"
	            android:textColor="#ffffff" 
	            android:background="@drawable/border"
	            />
		</LinearLayout>
		
		<LinearLayout android:id="@+id/routerunTimeLayout"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:orientation="vertical">
		    
		    <TextView
            android:id="@+id/routeRunTimedTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textColor="#ffffff"
            style="@style/OtherText"
            android:gravity="center"
            android:background="@drawable/border" />
		    
		    <TextView
            android:id="@+id/routeRunTimedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textColor="#ffffff"
            style="@style/OtherTextLabel"
            android:gravity="center"
            android:background="@drawable/border" />
		    
		</LinearLayout>
       
		<LinearLayout android:id="@+id/routeRunCaloriesLayout"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:orientation="vertical">
		    
	        <TextView
	            android:id="@+id/routeRunCaloriesTxt"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="calories"
	            android:textColor="#ffffff"
	            style="@style/OtherText"
	            android:gravity="center"
	            android:background="@drawable/border"
	            android:layout_marginRight="1dp" />
	        
	        <TextView
	            android:id="@+id/routeRunCaloriesLabel"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="cal"
	            android:textColor="#ffffff"
	            style="@style/OtherTextLabel"
	            android:gravity="center"
	            android:background="@drawable/border"
	            android:layout_marginRight="1dp" />
	        
        </LinearLayout>
    </LinearLayout>
