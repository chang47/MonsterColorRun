<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

	<TextView android:id="@+id/equippedSticker"
	    android:text="Sticker"
	    android:layout_marginTop="40dp"
	    android:layout_marginLeft="10dp"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_below="@+id/equipmentTable"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/equippedSticker"
        android:id="@+id/stickerTable">
        <ImageView
	        android:id="@+id/Sticker1"
	        android:layout_width="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_height="50dp"
	        android:src="@drawable/colorworld" />
		<ImageView
	        android:id="@+id/Sticker2"
	        android:layout_width="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_height="50dp"
	        android:src="@drawable/colorworld" />
		<ImageView
	        android:id="@+id/Sticker3"
	        android:layout_width="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_height="50dp"
	        android:src="@drawable/colorworld" />
		<ImageView
	        android:id="@+id/Sticker4"
	        android:layout_width="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_height="50dp"
	        android:src="@drawable/colorworld" />
		<ImageView
	        android:id="@+id/Sticker5"
	        android:layout_width="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_height="50dp"
	        android:src="@drawable/colorworld" />
    </LinearLayout>

    <TextView
        android:id="@+id/monsterLevel1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stickerTable"
        android:layout_alignLeft="@+id/equippedSticker"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:text="lv.1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/equippedItemFont"
        />

    <TextView
        android:id="@+id/monsterLevel2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stickerTable"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/monsterLevel1"
        android:textColor="#000000"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/equippedItemFont" />
    
    
    <TextView
        android:id="@+id/monsterLevel3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/monsterLevel2"
        android:layout_alignBottom="@+id/stickerTable"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/equippedItemFont" />

        <TextView
        android:id="@+id/monsterLevel4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stickerTable"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/monsterLevel3"
        android:textColor="#000000"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/equippedItemFont"/>
    
    
    <TextView
        android:id="@+id/monsterLevel5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stickerTable"
        android:layout_toRightOf="@+id/monsterLevel4"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        style="@style/equippedItemFont" />


</RelativeLayout>
