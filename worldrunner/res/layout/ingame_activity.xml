            android:id="@+id/monsterProgress1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MonsterSprite1"
            android:layout_below="@+id/MonsterSprite1" />

        <ProgressBar
            android:id="@+id/monsterProgress2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/MonsterSprite2"
            android:layout_below="@+id/MonsterSprite2" />

        <ProgressBar
            android:id="@+id/monsterProgress3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/MonsterSprite3" />

        <ProgressBar
            android:id="@+id/monsterProgress4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="50dp"
            android:layout_alignTop="@+id/MonsterSprite4" />

        <ProgressBar
            android:id="@+id/monsterProgress5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
