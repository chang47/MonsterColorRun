<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout
            android:id="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">      

         <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tracker"
            android:layout_below="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
	            android:id="@+id/tvDistance"
                android:text="KM"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvTime"
                android:text="TIME"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvPage"
                android:text="PACE (KM)"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
	        android:id="@+id/tracker2"
            android:layout_below="@+id/tracker"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
        <TextView
            	android:id="@+id/tvCoin"
                android:text="Coins"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    
    </LinearLayout>
   <LinearLayout
        android:id="@+id/enemyParty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
 
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1">
			<ImageView 
			    android:id="@+id/test22"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_launcher"
			    android:layout_centerHorizontal="true"/>
			<ProgressBar 
			    android:id="@+id/testbar2"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_centerHorizontal="true"
			    android:layout_below="@+id/test22"/>
            
            
        </RelativeLayout>
      

      
        
        
    </LinearLayout>

    
  <!--   <ListView
            android:id="@+id/item_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/audio"
            android:layout_below="@+id/monster">

    </ListView> -->
    <LinearLayout
            android:id="@+id/audio"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Pause Clip"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Display Combat Log"
            	android:id="@+id/btnLog"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Stop Mission"
                android:id="@+id/stopMission"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/playerParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/audio"
        android:orientation="horizontal">
        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/playerParty2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        

        <TextView
            android:id="@+id/MonsterName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MonsterSprite5"
            android:layout_alignRight="@+id/MonsterSprite5"
            android:layout_centerHorizontal="true"
            android:text="Party 5" />

        <TextView
            android:id="@+id/MonsterName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/MonsterName4"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@+id/MonsterSprite3"
            android:text="Party 3" />

        <TextView
            android:id="@+id/MonsterName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MonsterSprite4"
            android:layout_centerHorizontal="true"
            android:text="Party 4" />

        <TextView
            android:id="@+id/MonsterName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MonsterSprite1"
            android:layout_above="@+id/MonsterSprite1"
            android:layout_centerHorizontal="true"
            android:text="Party 1" />

        <TextView
            android:id="@+id/MonsterName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MonsterSprite1"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/MonsterSprite5"
            android:text="Party 2" />

        <ImageView
            android:id="@+id/MonsterSprite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MonsterSprite1"
            android:layout_below="@+id/MonsterName2"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@+id/MonsterSprite4"
            android:src="@drawable/ic_launcher" />

        <ProgressBar
            android:id="@+id/monsterProgress1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MonsterSprite1"
            android:layout_below="@+id/MonsterSprite1" />

        <ProgressBar
            android:id="@+id/monsterProgress2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/MonsterSprite2"
            android:layout_below="@+id/MonsterSprite2" />

        <ProgressBar
            android:id="@+id/monsterProgress3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/MonsterSprite3"
            android:layout_alignTop="@+id/MonsterSprite3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp" />

        <ProgressBar
            android:id="@+id/monsterProgress4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MonsterSprite4"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="50dp" />

        <ProgressBar
            android:id="@+id/monsterProgress5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MonsterSprite5"
            android:layout_alignLeft="@+id/MonsterSprite5" />

        <ImageView
            android:id="@+id/MonsterSprite4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MonsterName4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="81dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/MonsterSprite3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MonsterSprite4"
            android:layout_toLeftOf="@+id/monsterProgress1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/MonsterSprite5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/MonsterSprite2"
            android:layout_alignTop="@+id/MonsterSprite4"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/MonsterSprite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/MonsterName4"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/MonsterName4"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</RelativeLayout>