<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout
            android:id="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">      

        <TextView
                android:text="Fuel Recon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <ProgressBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        
         <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tracker"
            android:layout_below="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
	            android:id="@+id/tvDistance"
                android:text="KM"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvTime"
                android:text="TIME"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvPage"
                android:text="PACE (KM)"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
	        android:id="@+id/tracker2"
            android:layout_below="@+id/tracker"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
        <TextView
            	android:id="@+id/tvCoin"
                android:text="Coins"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/monster"
        android:layout_below="@+id/tracker2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/monsterName"
            android:gravity="center"
            android:text="Monster Name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <ProgressBar 
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/monsterProgress"
            android:layout_below="@+id/monsterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        
    </RelativeLayout>
    <ListView
            android:id="@+id/item_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/audio"
            android:layout_below="@+id/monster">

    </ListView>
    <LinearLayout
            android:id="@+id/audio"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Pause Clip"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Replay Clip"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="Stop Mission"
                android:id="@+id/stopMission"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</RelativeLayout>