<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout
            android:id="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">      

         <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tracker"
            android:layout_below="@+id/progress"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
	            android:id="@+id/tvDistance"
                android:text="KM"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvTime"
                android:text="TIME"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
        <TextView
            	android:id="@+id/tvPage"
                android:text="PACE (KM)"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
	        android:id="@+id/tracker2"
            android:layout_below="@+id/tracker"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
        <TextView
            	android:id="@+id/tvCoin"
                android:text="Coins"
                android:layout_weight=".33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    
    </LinearLayout>
   <LinearLayout
        android:id="@+id/enemyParty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
 
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1">
			<ImageView 
			    android:id="@+id/test22"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/ic_launcher"
			    android:layout_centerHorizontal="true"/>
			<ProgressBar 
			    android:id="@+id/testbar2"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_centerHorizontal="true"
			    android:layout_below="@+id/test22"/>
            
            
        </RelativeLayout>
      

      
        
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/monster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/audio"
        android:layout_below="@+id/tracker2"
        android:orientation="horizontal" >

