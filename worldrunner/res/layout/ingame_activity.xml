        <ImageView
            android:id="@+id/enemySprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MonsterSprite4"
            android:layout_below="@+id/monsterProgress"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="description" />

        <ImageView
            android:id="@+id/MonsterSprite5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/monsterProgress"
            android:layout_alignTop="@+id/MonsterSprite4"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/MonsterSprite3"
            android:layout_width="wrap_content"
