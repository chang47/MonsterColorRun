<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/stickerPortrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/land" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/stickerStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stickerPortrait">
        
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/stickerHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp" />
            <TextView
                android:id="@+id/stickerAtk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atk" />
            <TextView
                android:id="@+id/stickerDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Def" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/stickerSpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spd" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/stickerLevel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Level"/>
            <TextView 
                android:id="@+id/stickerExp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Exp To Go"/>
            <ProgressBar 
                android:id="@+id/expProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
		android:id="@+id/activeSkill"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/stickerStats"
        android:orientation="vertical">
        <TextView 
            android:height="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill name"/>
        <TextView 
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill description"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/passiveSkill"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/activeSkill"
        android:orientation="vertical">
        <TextView 
            android:height="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill name"/>
        <TextView 
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill description"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/passiveSkill">
        <Button 
	        android:id="@+id/viewExitButton2"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="Exit"/>
    </LinearLayout>

</RelativeLayout>