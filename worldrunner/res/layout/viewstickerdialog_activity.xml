<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/portraitContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
            android:id="@+id/monsterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
		    android:src="@drawable/land"
		    android:adjustViewBounds="true"
		    android:scaleType="centerCrop"
            android:contentDescription="Displays the image"/>
    	    
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/stickerStats"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portraitContainer">
        
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/headImage"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" 
            android:paddingBottom="20dp"/>
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/stickerHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp" />
            <TextView
                android:id="@+id/stickerAtk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atk" />
            <TextView
                android:id="@+id/stickerDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Def" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/stickerSpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spd" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/stickerLevel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Level"/>
            <TextView 
                android:id="@+id/stickerExp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Exp To Go"/>
            <ProgressBar 
                android:id="@+id/expProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
		android:id="@+id/activeSkill"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/stickerStats"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/activeSkillName"
            android:height="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill name"/>
        <TextView 
			android:id="@+id/activeSkillDescription"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill description"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/passiveSkill"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/activeSkill"
        android:orientation="vertical">
        <TextView 
            android:height="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill name"/>
        <TextView 
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="skill description"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/passiveSkill">
        <Button 
	        android:id="@+id/viewExitButton2"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="Exit"/>
    </LinearLayout>

    
    
</RelativeLayout>