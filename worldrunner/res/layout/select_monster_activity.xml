<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    <TextView 
        android:id="@+id/pickStarterText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose your first monster!"
        android:textSize="24sp"/>
    
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center" >
	
	    <ImageView
	        android:id="@+id/chooseMonster1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/body2" 
	        android:layout_weight="1"
	        android:padding="1dp"
	        android:background="@drawable/border"/>
	
	    <ImageView
	        android:id="@+id/chooseMonster2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/body1"
	        android:layout_weight="1"
	        android:padding="1dp"
	        android:background="@drawable/border" />
	
	    <ImageView
	        android:id="@+id/chooseMonster3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/body3"
	        android:layout_weight="1"
	        android:padding="1dp"
	        android:background="@drawable/border" />
	
	</LinearLayout>
</RelativeLayout>